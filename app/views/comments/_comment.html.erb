<li id="comment-<%= comment.post.id %>-<%= comment.id %>">
  <%= image_tag "avatar.png", alt: comment.user.user_name, class: "avatar-smaller" %>
  <span class="user"><%= link_to comment.user.full_name, comment.user %></span>
  <span class="content"><%= comment.content %></span>
  <span class="timestamp">
    <%= t ".posted" %> <%= time_ago_in_words comment.created_at %> <%= t ".ago" %>
    <% if current_user && current_user.is?(comment.user) %>
      <%= link_to t(".delete"), [comment.post, comment],
        method: :delete, data: {confirm: t(".sure")} %>
    <% end %>
  </span>
</li>
