<div class="navbar navbar-fixed-top header">
  <%= form_tag users_url, method: :get, class: "navbar-form navbar-left search-form" do %>
    <%= link_to image_tag("sl-icon.png", alt: t(".logo"), class: "logo"),
      root_path %>
    <%= text_field_tag :search, params[:search], placeholder: t(".placeholder"),
      class: "form-control search-box" %>
  <% end %>
  <ul class="navbar navbar-nav navbar-right link-bar">
    <% if logged_in? %>
      <li><%= link_to t(".profile"), current_user %></li>
      <li><%= link_to t(".home"), root_path %></li>
      <li><%= link_to t(".help"), help_path %></li>
      <li class="dropdown">
        <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
          <b class="caret"></b>
        <% end %>
        <ul class="dropdown-menu">
          <li><%= link_to t(".settings"), edit_user_path(current_user) %></li>
          <li><%= link_to t(".logout"), logout_path, method: :delete %></li>
        </ul>
      </li>
    <% end %>
  </ul>
</div>
