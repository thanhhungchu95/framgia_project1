<div class="row">
  <aside class="col-md-4">
    <section class="user-info">
      <%= render "shared/user_info" %>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= follow_title_for params[:action] %></h3>
    <% if users_list_for(@user, follow_type: params[:action]).any? %>
      <ul class="show-user-info follow">
        <%= render users_list_for @user, follow_type: params[:action] %>
      </ul>
      <%= paginate users_list_for(@user, follow_type: params[:action]),
        theme: "twitter-bootstrap-3" %>
    <% end %>
  </div>
</div>
